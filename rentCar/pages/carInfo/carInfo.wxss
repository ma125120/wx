.tel-view {
	width:100%;
	height: 48px;
	background: #fff;
	line-height: 48px;
	display: flex;
}
.tel-view image {
	width:30px;
	height:30px;
	padding:0 10px;
}
.tel-view .r {
	position: absolute;
	right:0;
	width:125px;
	line-height: 48px;
	background: #0099FF;
	text-align: center;
	font-size:18px;
}
.beizhu {
	font-size:12px;
}
.calendar {
	line-height: 32px;
}
.weekdays {
