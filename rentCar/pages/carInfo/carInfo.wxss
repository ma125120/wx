.my-flex {
	display: flex;
	flex-wrap: wrap;
}

.col-7 {
	width:13.5%;
	box-sizing: border-box;
}
.col-7:nth-child(7n+1) {
	margin-left:15px;
}
.cir {
	display: inline-block;
	border-radius: 50%;
	border:thin solid #B4B5BD;
	padding:0 8px;
	overflow:hidden;
}
.my-flex .l {
	width:48%;
	color:#888;
	padding-left:10px;
	text-align: left;
}
.my-flex .r {
	flex:1;
	text-align: right;
	color:#0099FF;
	padding-right: 10px;
}
.gray-block {
	width:100%;
	height:10px;
	background: #F2F2F2;
}
.week {
	margin:10px 0 20px;
	position: relative;
  overflow:hidden;
}
.bot-com {
	padding-top:10px;
}
.cir4282,
.cir4283 {
	z-index:2000;
}
.cir4282:before {
	content:'';
	position: absolute;
	bottom:50%;
	left:0;
	width:36px;
	height:36px;
	background: #f00;
}
.cir4283:before {
	content:'';
	position: absolute;
	top:50%;
	left:0;
	width:36px;
	height:36px;
	background: #f00;
}

.my-flex.my {
	justify-content: space-around;
}
.circle {
	display: inline-block;
	border-radius: 50%;
	width:16px;
