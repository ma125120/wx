.head,.body {
	font-size:14px;
	color:#565656;
}
.head image {
	width:180rpx;
	height:180rpx;
	border-radius: 50%;
	margin-top: 100rpx;
}
.head .text {
	margin:36rpx 0;
}

.body .item {
	display: flex;
	border-bottom: thin solid #ccc;
	line-height: 72rpx;
}
.left {
	text-align: left;
	padding-left: 20rpx;
	width:80%;
}
.right {
	text-align: right;
	padding-right: 20rpx;
	flex:1;
	color:#C8C8C8;
}