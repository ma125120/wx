	color:#999;
}
.head {
	display: flex;
	background: #fff;
	padding:20px 6px;
	font-size:18px;
}
.head image {
	width:24px;
	height:24px;
	margin-right: 12px;
	vertical-align: middle;
}
.head text {
	vertical-align: middle;
}
.score,
.stick {
