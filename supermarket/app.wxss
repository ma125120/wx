page {
	font-family: "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif;
}
.flex {
	display: flex;
}
.gray-block {
	width:100%;
	height:8px;
	background: #F0F0F0;
}
.bt {
	border-bottom: 1px solid #E8E8E8;
}
.gray {
	color:#888;
}
.fixed {
	position: fixed;
	bottom:0;
	left:0;
	width:100%;
	font-size:14px;
	color:#888;
}
.wrap {
	flex-wrap: wrap;
}
.text-left {
	text-align: left;
}
.text-right {
	text-align: right;
}
.text-center {
	text-align: center;
}
.rotate90 {
	transform: rotate(90deg);
}
.rotate-90 {
	transform: rotate(-90deg);
}
.titles {
	font-size:15px;
	margin-bottom: 32rpx;
}
.titles:before {
	content:'';
	display: inline-block;
	vertical-align: middle;
	width:230rpx;
	height:2rpx;
	background: #aaa;
	margin-right:20rpx;
}
.titles:after {
	content:'';
	display: inline-block;
	vertical-align: middle;
	width:230rpx;
	height:2rpx;
	background: #aaa;
	margin-left:20rpx;
}
.wrap {
	position: relative;
}
.line36 {
	line-height: 72rpx;
}
.line32 {
	line-height: 64rpx;
}
.line48 {
	line-height: 96rpx;
}
.check-img {
	width:20px;
	height: 20px;
}
.arrow {
	width:40rpx;
	height: 40rpx;
	vertical-align: middle;
}
.lr-l {
	width:42%;
	text-align: left;
	padding-left:64rpx;
}
.lr-r {
	flex:1;
	text-align: right;
	padding-right:50rpx;
}
.modal-bg {
	position: absolute;
	top:0;
	left:0;
	background: rgba(0,0,0,.5);
	width:580rpx;
	height:1000rpx;
	z-index:-20;
}
.btn {
	background: #FEDF39;
	height:80rpx;
	line-height: 80rpx;
	width:64%;
	color:#000;
	border-radius: 80rpx;
}
button:after {
	content:'';
	display: none;
}
/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/  
::-webkit-scrollbar  
{  
    width: 0px;  
    height: 0px;  
    background-color: #F5F5F5;  
}  
  
/*定义滚动条轨道 内阴影+圆角*/  
::-webkit-scrollbar-track  
{  
    -webkit-box-shadow: inset 0 0 1px rgba(0,0,0,0);  
    border-radius: 10px;  
    background-color: #F5F5F5;  
}  
  
/*定义滑块 内阴影+圆角*/  
::-webkit-scrollbar-thumb  
{  
    border-radius: 10px;  
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);  
    background-color: #f00;  
} 