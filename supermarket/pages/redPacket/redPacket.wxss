scroll-view {
	min-height: 100vh;
	background: #F8F8F8;
	padding-bottom: 32rpx;
}
.bag {
	border-radius: 10rpx;
	width:96%;
	margin:12rpx auto 0;
	background: #fff;

}
.top-block {
	height:24rpx;
	background: #FEDF39;
	border-top-left-radius: 10rpx;
	border-top-right-radius: 10rpx;
}
.l {
	width:220rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	border-right:1px solid #F1F1EF;
}
.r {
	flex:1;
	padding: 72rpx 24rpx 0;
}
.prices {
	color:#F7875B;
	align-items: flex-end;
	line-height: 36rpx;
}
.price-symbol {
	font-size:12px;
}
.price {
	font-size:24px;
}
.price-comment {
	font-size:12px;
	color:#909090;
}
.left {
	flex: 1;
}
.right {
	width:120rpx;
	text-align: right;
}
.t {
	font-size:16px;
}
.time {
	font-size: 12px;
	color:#999;
}
.use {
	line-height: 56rpx;
	height: 56rpx;
	border-radius: 56rpx;
	color:#F5A486;
	border:1px solid #F5A486;
	text-align: center;
}
.b {
	padding:24rpx 0;
	font-size:12px;
	color:#999;
}
