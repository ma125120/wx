scroll-view {
	min-height: 100%;
	font-size:14px;
}
.page-head {
	border-bottom: 1px solid #ccc;
}
.ab-right {
	position: absolute;
	top:0;
	right:12px;
	z-index:3000;
	line-height:36px;
}
.del-view {
	display: flex;
}
.my-left {
	text-align: left;
	display: flex;
	align-items: center;
	padding-left:6px;
	width:72%;
}
.my-right {
	flex:1;
	text-align: right;
	margin-right: 6px;
}
.del {
	background: #d00;
	color:#fff;
	padding:5px;
	text-align: center;
}
.top {
	margin:12px auto;
	padding:0 6px;
}
.checkbox {
	margin:12px auto;
	padding:0 6px;
	align-items: center;
	padding-bottom:6px;
	border-bottom: 1px solid #797979;
}
.title-img {
	width:80px;
	height:80px;
	margin:5px;
}
.m {
	text-align: left;
	line-height: 50px;
	width:170px;
	overflow-x: hidden;
}
.m .title {
	width:170px;
	height: 50px;
	overflow: hidden;
	text-overflow: ellipsis;
}
.r {
	text-align: right;
	line-height: 50px;
}
.del image {
	width:32px;
	height:32px;
}
.addDel {
	text-align: left;
}
.addDel .num {
	line-height: 18px;
	display: inline-block;
	vertical-align: middle;

}
.addDel .btn {
	display: inline-block;
	vertical-align: middle;
	width:20px;
	height:20px;
	line-height: 18px;
	border-radius: 50%;
	margin:0 8px;
	text-align: center;
	font-size: 20px;
}
.delBtn {
	border:1px solid #333;
	color:#333;
}
.addBtn {
	border:1px solid #169BD5;
	background: #169BD5;
	color:#fff;
}

.foot {
	position: fixed;
	bottom:0;
	left:0;
	width:100%;
	z-index:2000;
	background: #F2F2F2;
	line-height: 48px;
	display: flex;
}
.foot .left {
	flex:1;
	display: flex;
}
.foot .check-img {
	align-self: center;
	padding-left:12px;
}
.text {
	padding: 0 12px;
}

.submit-btn {
	width:140px;
	color:#fff;
	background: #169BD5;
	line-height: 48px;
	border-radius: 0;
}
.hide {
	display: none;
}
.num {
	width:24px;
	text-align: center;
}