.item image {
	width:120px;
	height:120px;
  /*padding:12px;*/
}
.detail {
	display: flex;
	line-height: 36px;
	justify-content: center;
	align-content: flex-end;
}
.item .title {
	line-height: 32px;
	border-bottom: 1px solid #888;
}
