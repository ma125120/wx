scroll-view {
	height:100vh;
	min-height: 600px;
	background: #F2F2F2;
	text-align: left;
}
.body {
	width:90%;
	margin:36px auto;
}
.block {
	width:96%;
	background: #fff;
	padding-left:20px;
	line-height: 36px;
	height: 36px;
	border-radius: 36px;
	border:1px solid #797979;
	margin-bottom: 12px;
}
.tel-info {
	display: flex;

}
.tel-info .input {
	flex:1;
	margin-right:32px;
}
.getCode {
	width:100px;
	border:none;
	background: #169BD5;
	color:#fff;
	padding:0;
	text-align: center;
  font-size:13px;
}
.title {
	margin:24px 0 12px 0;
}
.pics {
	display: flex;
}
.pic  {
	width:45%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items:center;
}
.pic image {
	width:120px;
	height:120px;
	margin:0 auto;
}
.text {
	text-align: center;
	margin-top:12px;
}
.btn {
	width:90%;
	line-height: 40px;
	border-radius: 40px;
	color:#fff;
	font-size: 16px;
	text-align: center;
	margin:24px auto 0;
}
.finish {
	background: #169BD5;
  margin-top:60px;
}
.up,
.company {
	background: #FF6600;
}

.first-form {
	margin:24px auto 24px;
	width:92%;
}