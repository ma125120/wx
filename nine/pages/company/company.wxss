scroll-view {
	min-height: 100%;
	background: #FFC3C3;
}
.title {
	margin: 24px auto 12px;
	font-size:16px;
}
.body {
	width:90%;
	margin:36px auto;
}
.addr {
  position: relative;
}
.block {
	width:96%;
	background: #fff;
	padding-left:20px;
	line-height: 36px;
	height: 36px;
	border-radius: 36px;
	border:1px solid #797979;
	margin-bottom: 12px;
	text-align: left;
}
.head-pic image {
	width:300px;
	height:172px;
}
.pics {
	display: flex;
	justify-content: space-between;
}
.pic {
	width:100px;
	height:100px;
}
image {
	width:100px;
	height:100px;
}
.btn {
	width:60%;
	line-height: 40px;
	border-radius: 40px;
	color:#fff;
	font-size: 16px;
	text-align: center;
	margin:120px auto 12px;
}
.company {
	background: #FF6600;
}
.foot {
	font-size:12px;
	color:#AEAEAE;
	margin-bottom: 36px;
}
.text {
	line-height: 48px;
}
.pic,
.my-pic {
	width:150px;
	height:150px;
}
